@page
@model petsSharp.Pages.cadastrarFornecedorModel
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastrar fornecedor</title>
    <link href="styleCadastrarFornecedor.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/cadastro-fornecedor.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body style="background-color: #151A30;">
    <header>
      <div id="cabecalho">
        <img id="profileicon" src="~/img/imagens/profileicon.png"></img>
        <a asp-area="" asp-page="/Index"  style="color: red;">Sair</a>
      </div>
    </header>
    <main>
        <div id="menu">
            <a class="textoDashboard" asp-page="/dashboard" asp-area="" style="color: white;">Dashboard</a>
            <img class="dashboard" src="~/img/tela-principal/dashboard.png"></img>
            <div class="selecionado">
                <a class="textoEstoque" asp-page="/estoque" asp-area="" style="color: white">Estoque</a>
                <img class="estoque" src="~/img/tela-principal/estoque.png"></img>
                <a class="textoCadastrarProduto" asp-page="/addProduto" asp-area=""  style="color: white;">Cadastrar produto</a>
                <a class="textoCadastrarFornecedor" asp-page="/cadastrarFornecedor" asp-area="" style="color: #004BE3;">Cadastrar fornecedor</a>
                <a class="textoGerenciarEstoque" asp-page="/Error" asp-area="" style="color: white;">Gerenciar estoque</a>
            </div>
            <a class="textoVendas" asp-page="/Error" asp-area="" style="color: white;">Vendas</a>
            <img class="vendas" src="~/img/tela-principal/sales.png"></img>
            <a class="textoAnimais" asp-page="/Error" asp-area="" style="color: white;">Animais</a>
            <img class="animais" src="~/img/tela-principal/animais.png"></img>
            <a class="textoBanhoetosa" asp-page="/Error" asp-area="" style="color: white;">Banho e tosa</a>
            <img class="tesoura" src="~/img/tela-principal/tesoura.png"></img>
        </div>
      <form method="post">
      <div class="quadradoCentral">
        <p class="textoNome">Nome:</p>
        <div class="quadradoNome">
            <label  class="form-label"></label>
            <input asp-for="@Model.Nome" type="text" class="form-control border-black" id="campoNome" style="background-color: #151A30; color:white;" required>
          </div>
        <p class="textoCategoria">Categoria:</p>
        <div class="quadradoCategoria">
            <label  class="form-label"></label>
            <input asp-for="@Model.Categoria" type="text" class="form-control border-black" id="campoCategoria" style="background-color: #151A30; color:white;" required>
        </div>
        <p class="textoEndereco">Endereço:</p>
        <div class="quadradoEndereco">
            <label  class="form-label"></label>
            <input asp-for="@Model.Endereco" type="text" class="form-control border-black" id="campoEndereco" style="background-color: #151A30; color:white;" required>
        </div>
        <p class="textoBairro">Bairro:</p>
        <div class="quadradoBairro">
            <label  class="form-label"></label>
            <input asp-for="@Model.Bairro" type="text" class="form-control border-black" id="campoBairro" style="background-color: #151A30; color:white;" required>
        </div>
        <p class="textoCidade">Cidade:</p>
        <div class="quadradoCidade">
            <label  class="form-label"></label>
            <input asp-for="@Model.Cidade" type="text" class="form-control border-black" id="campoCidade" style="background-color: #151A30; color:white;" required>
        </div>
        <p class="textoEstado">Estado:</p>
        <div class="quadradoEstado">
            <label  class="form-label"></label>
            <input asp-for="@Model.Estado" type="text" class="form-control border-black" id="campoEstado" style="background-color: #151A30; color:white;" required>
        </div>
        <p class="textoCNPJ">CNPJ:</p>
        <div class="quadradoCNPJ">
            <label  class="form-label"></label>
            <input asp-for="@Model.CNPJ" type="text" class="form-control border-black" id="campoCNPJ" style="background-color: #151A30; color:white;" required >
        </div>
        <p class="textoContato">Contato:</p>
        <div class="quadradoContato">
            <label  class="form-label"></label>
            <input asp-for="@Model.Contato" type="text" class="form-control border-black" id="campoContato" style="background-color: #151A30; color:white;" required>
        </div>
        <button class="btn btn-success botaoCadastrar">Cadastrar</button>
      </div>
      </form>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>