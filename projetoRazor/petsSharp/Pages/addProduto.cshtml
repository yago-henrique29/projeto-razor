@page
@model petsSharp.Pages.addProdutoModel
@{
    Layout = null;  
}


<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastrar produto</title>
    <link rel="stylesheet" href="~/css/cadastro-produto.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body style="background-color: #151A30;">
    <header>
      <div id="cabecalho">
        <img id="profileicon" src="~/img/imagens/profileicon.png"></img>
        <a asp-area="" asp-page="/Index" style="color: red;">Sair</a>
      </div>
    </header>
    <main>
        <div id="menu">
            <a class="textoDashboard" asp-page="/dashboard" asp-area="" style="color: white;">Dashboard</a>
            <img class="dashboard" src="~/img/tela-principal/dashboard.png"></img>
            <div class="selecionado">
                <a class="textoEstoque" asp-page="/estoque" asp-area="" style="color: white">Estoque</a>
                <img class="estoque" src="~/img/tela-principal/estoque.png"></img>
                <a class="textoCadastrarProduto" asp-page="/addProduto" asp-area=""  style="color: white;">Cadastrar produto</a>
                <a class="textoCadastrarFornecedor" asp-page="/cadastrarFornecedor" asp-area="" style="color: #004BE3;">Cadastrar fornecedor</a>
                <a class="textoGerenciarEstoque" asp-page="/Error" asp-area="" style="color: white;">Gerenciar estoque</a>
            </div>
            <a class="textoVendas" asp-page="/Error" asp-area="" style="color: white;">Vendas</a>
            <img class="vendas" src="~/img/tela-principal/sales.png"></img>
            <a class="textoAnimais" asp-page="/Error" asp-area="" style="color: white;">Animais</a>
            <img class="animais" src="~/img/tela-principal/animais.png"></img>
            <a class="textoBanhoetosa" asp-page="/Error" asp-area="" style="color: white;">Banho e tosa</a>
            <img class="tesoura" src="~/img/tela-principal/tesoura.png"></img>
        </div>
      <form method="post">
      <div class="quadradoCentral">
        <p class="textoNome">Nome:</p>
        <div class="quadradoNome">
          <label class="form-label"></label>
          <input asp-for="@Model.Nome"  type="text" class="form-control border-black" id="campoNome" style="background-color: #151A30; color:white;" required>
        </div>
        <p class="textoCategoria">Categoria:</p>
        <div class="quadradoCategoria">
          <label  class="form-label"></label>
          <input asp-for="@Model.Categoria" type="text" class="form-control border-black" id="campoCategoria" style="background-color: #151A30; color:white;" required>
        </div>
        <p class="textoDescricao">Descrição:</p>
        <div class="quadradoDescricao">
          <label  class="form-label"></label>
         <textarea asp-for="@Model.Descricao" class="form-control border-black" id="campoDescricao" rows="3" style="background-color: #151A30; color:white;" required></textarea>
        </div>
        <p class="textoPrecoUnitario">Preço unitário:</p>
        <div class="quadradoPrecoUnitario">
          <label  class="form-label"></label>
          <input asp-for="@Model.Valor" type="number" step="0.01" placeholder="0.00" class="form-control border-black" id="campoPrecoUnitario" style="background-color: #151A30; color:white;" required>
        </div>
        <p class="textoFornecedor">Fornecedor:</p>
        <div class="quadradoFornecedor">
          <label class="form-label"></label>
          <input asp-for="@Model.Fornecedor" type="text" class="form-control border-black" id="campoFornecedor" style="background-color: #151A30; color:white;" required>
        </div>
        <button class="btn btn-success">Cadastrar</button>
                @if (Model.Fornecedor == "ERRO: NÃO ENCONTRADO")
                {
                        <h5 class="text-center text-danger">O fornecedor não existe no sistema</h5>
                }
            </div>
      </form>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>